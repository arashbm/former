<%= simple_form_for(@form, validate: true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :enabled %>
    <%= f.input :description %>
    <%= f.association :fields, as: :check_boxes %>
  </div>


  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
