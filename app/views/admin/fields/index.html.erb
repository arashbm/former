<h1>Listing fields</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Enabled</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @fields.each do |field| %>
  <tr>
    <td><%= field.name %></td>
    <td><%= field.description %></td>
    <td><%= field.enabled %></td>
    <td><%= link_to 'Show', [:admin, field] %></td>
    <td><%= link_to 'Edit', edit_admin_field_path(field) %></td>
    <td><%= link_to 'Destroy', [:admin, field], confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

