<%= simple_form_for([:admin,@form], validate: true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :enabled %>
    <%= f.input :description, input_html: { class: 'span6' } %>
    <%= f.association :fields, as: :check_boxes %>
    <%= link_to 'فیلد‌های بیشتری اضافه کنید...', new_admin_field_path %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
